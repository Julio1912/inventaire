{% extends 'base.html.twig' %}

{% block body %}
<div class="box box-solid content">
    <div class="box-header with-border">
        <h3 class="box-title">Modifier information </h3>
    </div>
    <div class="box-body">
        <div class="row">
            <div class="card">
                <div class="card-body">
                {{form_start(formUtilisateur)}}
                        {{form_row(formUtilisateur.Name)}}
                        {{form_row(formUtilisateur.Username)}}
                        {{form_row(formUtilisateur.Roles)}}
                </div>
                <div class="box-footer">
                    <div class="row">
                        <div class="col-lg-6">
                            <button type="submit" class="btn btn-success btn-block"> Modifier Information</button>
                        </div>
                        <div class="col-lg-6">
                            <button type="reset" class="btn btn-danger btn-block">Annuler Information</button>
                        </div>
                    </div>
                </div>

                {{form_end(formUtilisateur)}}
            </div>
        </div>
    </div>
</div>

{% endblock %}